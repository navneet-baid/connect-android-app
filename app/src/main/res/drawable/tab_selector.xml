<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_tab_color" /> <!-- Change this color to your desired selected tab color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Change this to your default unselected tab color -->
        </shape>
    </item>
</selector>
